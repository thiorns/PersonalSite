body {
	background-image: url("/C:/Users/thoma/OneDrive/Documents/Learning/PersonalSite/assets/images/castle.jpeg");
	background-repeat: no-repeat;
	background-size: cover;
}
h1 {
	color: orange;
	font-style: italic;
}
table, th, td {
	border: 1px solid white;
	border-radius: 5px;
	border-collapse: collapse;
}
th, td {
	background-color: #fc0398;
}
ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #333333;
}

li {
  float: left;
}

li a {
  display: block;
  color: white;
  text-align: center;
  padding: 16px;
  text-decoration: none;
}

li a:hover {
  background-color: #111111;
}

div {
	width: 1400px;
	margin: auto;
	background-color: #000000;
	border-radius: 10px;
	box-sizing: border-box;
	padding: 0px;
	word-wrap: break-word;
	display: flex;
	flex-direction: column;
}

p {
	color: white;
}